<div class="modal fade" id="editCommentModal-<%= comment.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    	<div class="modal-header">
        <h5 class="modal-title">Edit Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
     	<div class="modal-body">
			  <%= render 'form', model: comment %>
			</div>
    </div>
  </div>
</div>
<div class="comment">
	<div class="card">
	  <div class="card-body">
	    <h6> @<%= comment.user.username %>: </h6> <%= comment.content %>
	    <% if current_user == comment.user %>
	    	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editCommentModal-<%= comment.id %>">
	        Edit Comment
	      </button>
	    	<%= link_to "Delete Comment", comment, method: :delete, class: "btn btn-primary" %>
	    <% end %>
	  </div>
	</div>
</div>
